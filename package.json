{
  "name": "vuex-test-helpers",
  "version": "0.1.0",
  "description": "A test library to construct mock Vuex stores",
  "main": "dist/legacy/index.js",
  "module": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heymrcarter/vuex-test-helpers.git"
  },
  "scripts": {
    "clean": "rimraf dist && mkdirp dist/legacy && mkdirp dist/legacy-umd",
    "build:legacy": "BABEL_ENV=legacy babel src --source-maps --no-comments --out-dir dist/legacy/",
    "build:legacy-umd": "rollup --config",
    "build": "npm run clean && run-p build:**",
    "test": "nyc --reporter=text mocha test.conf.js  \"./{,!(node_modules)/**/}src/**/*.spec.js\" --reporter list --require babel-polyfill",
    "test:watch": "npm run test -- --watch"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "mkdirp": "^0.5.1",
    "mocha": "^5.0.4",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.49.1",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "standard": "^11.0.1",
    "testdouble-chai": "^0.5.0"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "peerDependencies": {
    "testdouble": "^3.5.2"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "afterEach",
      "it",
      "expect",
      "td"
    ],
    "parser": "babel-eslint"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ]
  }
}
